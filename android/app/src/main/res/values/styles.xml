<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base button style -->
    <style name="AwesomeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Primary button -->
    <style name="AwesomeButton.Primary" parent="AwesomeButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Secondary button -->
    <style name="AwesomeButton.Secondary" parent="AwesomeButton">
        <item name="android:background">@drawable/button_outline_background</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!-- EditText style -->
    <style name="AwesomeEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/text_color_secondary</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="hintTextColor">@color/purple_500</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="GradientTextStyle">
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:shadowColor">#60000000</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
    </style>
</resources>